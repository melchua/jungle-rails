

<% if product = Product.find_by(id: product_id) %>
  <% item_total = product.price * quantity %>
  <% @order_total += item_total %>
  <tr>
    <td>
      <%= image_tag product.image.tiny %>
    </td>
    <td>
      <%= product.name %>
    </td>
    <td>
      <p><%= quantity %></p>
    </td>

    <td>
        <%= product.description %>
    </td>
    <td>
      <%= product.price %>
    </td>

    <td>
      <%= item_total %>
    </td>
  </tr>
<% end %>
